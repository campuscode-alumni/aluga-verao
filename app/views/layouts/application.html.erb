<!DOCTYPE html>
<html>
  <head>
    <title>AlugaTemporada</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <h1><%= link_to 'Aluga Verão', root_path %></h1>
            </div>
            <div class="navbar-right">
              <p class="navbar-text">Bem vindo ao Aluga Verão</p>
              <% if user_signed_in? %>
                <%= link_to 'Minhas propostas', my_proposals_path %>
                <%= link_to 'Logout', destroy_user_session_path, method: 'delete' %>
              <% else %>
                <%= link_to 'Login', new_user_session_path %>
                <%= link_to 'Cadastrar', new_user_registration_path %>
              <% end %>
              <%= render 'shared/filter_form' %>
            </div>
          </div>
        </nav>
      </header>
      <%= flash[:error] %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class = "container">
        <%= yield %>
      </div>
  </body>
</html>
