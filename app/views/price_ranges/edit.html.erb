<% unless @price_range.errors.full_messages.empty? %>
  <div class="alert alert-danger">
    <% @price_range.errors.full_messages.each do |message| %>
      <label><%= message %></label>
    <% end %>
  </div>
<% end %>

<div class="row">
  <h1>Editar pre√ßo no periodo</h1>
  <div class="col-md-2">
    <%= form_for @price_range do |f| %>

      <div class="form-group">
        <%= f.label :start_date, 'Data Inicial' %>
        <%= f.date_field :start_date, min: Date.today, disabled: 'disabled', class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :end_date, 'Data Final' %>
        <%= f.date_field :end_date, min: Date.today, disabled: 'disabled', class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :daily_rate, 'Valor da diaria' %>
        <%= f.number_field :daily_rate, class:'form-control' %>
      </div>

      <%= f.submit 'Enviar', class: "btn btn-default" %>
    <% end %>
  </div>
</div>
